<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:weightSum="10"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="9"
        android:weightSum="10"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center_vertical"

        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Rank_num"
            android:layout_width="0dp"
            android:text="1"
            android:layout_weight="1"
            android:textSize="25dp"
            android:textColor="@color/tab"
            android:padding="10dp"

            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_weight="2">

            <com.thinksky.redefine.CircleImageView
                android:id="@+id/CheckIn_userHead"
                android:layout_width="50dp"
                android:src="@drawable/side_user_avatar"
                tools:border_width="2dp"
                android:scaleType="centerCrop"
                tools:border_color="@color/light"
                android:layout_height="50dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/CheckIn_nickname"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="20dp"
            android:textColor="@color/tab"
            android:text="小泽玛丽罗"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/CheckIn_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.9"
            android:textColor="@color/tab"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:text="00:19:31"
            android:paddingRight="20dp"
            android:textSize="20dp"

            />
    </LinearLayout>


</LinearLayout>