<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_bg"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.thinksky.redefine.CircleImageView
            android:id="@+id/user_image"
            android:src="@drawable/side_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:id="@+id/post_title"
            android:text="帖子标题"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/author"
            android:text="作者："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/user_name"
            android:text="作者"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_toRightOf="@+id/author"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/fenLei"
            android:text="分类："
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_toRightOf="@+id/user_name"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/post_category"
            android:text="分类"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_title"
            android:layout_toRightOf="@+id/fenLei"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/view_count"
            android:text="99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/liuLan"
            android:text="人浏览"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author"
            android:layout_toRightOf="@id/view_count"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/reply_count"
            android:text="99"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author"
            android:layout_toRightOf="@+id/liuLan"/>
        <TextView
            android:textColor="@color/group_less"
            android:text="人回复"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author"
            android:layout_toRightOf="@id/reply_count"/>
    </RelativeLayout>
</LinearLayout>