<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/head_border">

    <!--页头-->
    <RelativeLayout
        android:id="@+id/group_post_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/head_border"
        android:layout_alignParentTop="true"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">
        <ImageView
            android:id="@+id/back_menu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/arrow_left"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="群组"
            android:textColor="@color/tab"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/cate_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/menu"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <!--body-->
    <ScrollView
        android:id="@+id/post_scroll"
        android:layout_below="@+id/group_post_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout">
        <LinearLayout
            android:id="@+id/body_line"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--帖子信息区-->
            <LinearLayout
                android:padding="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_title"
                    android:text="帖子标题"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <com.thinksky.redefine.CircleImageView
                            android:id="@+id/user_logo"
                            android:layout_marginTop="5dp"
                            android:src="@drawable/side_user_avatar"
                            android:layout_width="45dp"
                            android:layout_height="45dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/post_user_name"
                            android:textColor="#815F3D"
                            android:layout_margin="5dp"
                            android:textSize="17sp"
                            android:text="发帖人"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginTop="6dp"
                            android:text="楼主"
                            android:textColor="@color/white"
                            android:background="@drawable/text_blue_round"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/post_user_name"/>
                        <TextView
                            android:id="@+id/post_create_time"
                            android:layout_marginLeft="5dp"
                            android:textColor="#0C0C0C"
                            android:textSize="12sp"
                            android:text="2015-02-04"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/post_user_name"
                            android:layout_alignParentLeft="true" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/post_content"
                        android:textColor="@color/black"
                        android:text="这里是帖子内容，看看一看内容超越第二排是什么情况啊，再看一遍"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <include layout="@layout/one_line" />
        <!--评论主体-->
        <LinearLayout
            android:id="@+id/post_body_line"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </LinearLayout>

            <!--加载数据按钮-->
        <LinearLayout
            android:id="@+id/loading_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@drawable/item_click_bg">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:id="@+id/load_more_text"
                    android:text="点击加载更多"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ProgressBar
                    android:id="@+id/load_more_pro"
                    android:visibility="gone"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>
            <include layout="@layout/one_line" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--评论发表box-->
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/reply_bottom_layout"
            android:layout_width="match_parent"
            android:background="#F6FAFB"
            android:weightSum="10"
            android:visibility="visible"
            android:gravity="center"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/support_button"
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:layout_marginRight="6dp"
                android:background="@drawable/border"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/forum_like" />
                <TextView
                    android:id="@+id/supportCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#787C7F"
                    android:minWidth="30dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4.5"
                android:background="@drawable/border"
                android:layout_marginLeft="6dp"
                android:id="@+id/reply_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="35dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:src="@drawable/forum_com"/>
                <TextView
                    android:id="@+id/replyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#787C7F"
                    android:minWidth="30dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/reply_box"
            android:layout_width="fill_parent"
            android:visibility="gone"
            android:weightSum="10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/forum_edit_backgroud"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/round_border"
                android:layout_height="38dp">
                <ImageView
                    android:layout_width="22dp"
                    android:src="@drawable/plus"
                    android:layout_height="22dp" />
            </LinearLayout>
            <EditText
                android:id="@+id/reply_editText"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_marginLeft="10dp"
                android:hint="回复楼主"
                android:background="@drawable/edittext_background"
                android:layout_height="38dp" />
            <TextView
                android:id="@+id/sendPostButn"
                android:layout_width="0dp"
                android:layout_weight="1.6"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:background="@drawable/border"
                android:text="发表"
                android:textColor="#A9ADB0"
                android:layout_height="38dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/loading_text"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="16sp"
        android:text="加载中..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp" />
</RelativeLayout>