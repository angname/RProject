<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <ImageView
            android:padding="3dp"
            android:id="@+id/event_image"
            android:src="@drawable/friends_sends_pictures_no"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="7dp"
            android:id="@+id/textView8" />
        <TextView
            android:id="@+id/prompt_info"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="3dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/event_title"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image"
            android:src="@drawable/ic_person_grey600_18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/event_title"
            android:layout_alignRight="@+id/event_endTime" />
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/signCount"
            android:textSize="12sp"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_toRightOf="@+id/image" />
        <TextView
            android:textColor="@color/group_less"
            android:text="By："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_title"
            android:layout_alignParentLeft="true"
            android:id="@+id/textView" />
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/event_userName"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_toRightOf="@+id/textView" />
        <TextView
            android:textColor="@color/group_less"
            android:text="活动时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:id="@+id/textView2"/>
        <TextView
            android:textColor="@color/group_less"
            android:gravity="bottom"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:textSize="12sp"
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_userName"
            android:layout_toRightOf="@+id/textView2"
            android:layout_alignBottom="@id/textView2"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/textView3"
            android:text="报名截止时间："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textColor="@color/group_less"
            android:gravity="bottom"
            android:textSize="12sp"
            android:singleLine="true"
            android:id="@+id/event_endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_time"
            android:layout_toRightOf="@+id/textView3"
            android:layout_alignBottom="@id/textView3"/>
        <TextView
            android:textColor="@color/group_less"
            android:id="@+id/textView4"
            android:text="活动简介："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textColor="@color/group_less"
            android:paddingTop="3dp"
            android:textSize="12sp"
            android:id="@+id/event_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_endTime"
            android:layout_toRightOf="@+id/textView4"
            android:lines="2"
            android:ellipsize="end"/>

    </RelativeLayout>

</LinearLayout>