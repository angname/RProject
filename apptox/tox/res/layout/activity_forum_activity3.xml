<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.thinksky.tox.ForumActivity3">

    <RelativeLayout
        android:id="@+id/loginTop"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#4FC1E9"
        android:paddingBottom="0dp"

        android:paddingTop="0dp">

        <ImageView
            android:id="@+id/Menu"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:src="@drawable/menu_btn"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/CheckIn_TimeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="论坛"
            android:textColor="#ffffff"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18dp" />

        <RelativeLayout
            android:id="@+id/checkIn"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/security_head_button"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="签到"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </RelativeLayout>
    <com.thinksky.redefine.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
           android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF3F9FE0" >

            <LinearLayout
                android:id="@+id/header_picture"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/header_logo"
                    android:layout_width="@dimen/header_logo_size"
                    android:layout_height="@dimen/header_logo_size"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_header_logo" />
            </LinearLayout>

            <include
                android:id="@+id/stick"

                layout="@layout/stick_layout"
                />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />
            <ImageView

                android:layout_width="@dimen/header_logo_size"
                android:layout_height="@dimen/header_logo_size"
                android:layout_gravity="center"
                android:src="@drawable/ic_header_logo" />



            <include
                android:id="@+id/top_stick"
                layout="@layout/stick_layout"
                />
        </LinearLayout  >
    </com.thinksky.redefine.MyScrollView>

</LinearLayout>
