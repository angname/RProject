<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:more="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/head_border"
    android:id="@+id/group_page">

    <!--页头-->
    <RelativeLayout
        android:id="@+id/group_detial_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/head_border"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">
        <ImageView
            android:id="@+id/back_menu"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/arrow_left"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/CheckIn_TimeNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/group_name"
            android:textColor="@color/tab"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/group_post"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:src="@drawable/pencil"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
        <ImageView
            android:id="@+id/cate_menu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/chose_menu"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/group_post" />
    </RelativeLayout>

    <!--body-->
    <ScrollView
        android:layout_below="@+id/group_detial_top"
        android:id="@+id/group_scro"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:padding="4dp"
                    android:layout_weight="0.9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/group_logo"
                        android:scaleType="fitXY"
                        android:src="@drawable/friends_sends_pictures_no"
                        android:layout_width="match_parent"
                        android:layout_height="100dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="2.1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="17sp"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:text="群组名字"
                        android:textColor="@color/black"
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textColor="@color/group_less"
                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="分类"
                        android:id="@+id/group_type_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:textColor="@color/group_less"
                        android:paddingTop="3dp"
                        android:paddingLeft="5dp"
                        android:text="公有群组"
                        android:id="@+id/group_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_name"
                        android:layout_alignParentLeft="true"/>
                    <TextView
                        android:textColor="@color/group_less"
                        android:paddingTop="3dp"
                        android:paddingLeft="5dp"
                        android:text="帖子:"
                        android:id="@+id/label1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_type"
                        android:layout_alignParentLeft="true" />
                    <TextView
                        android:textColor="@color/group_less"
                        android:paddingTop="3dp"
                        android:paddingLeft="5dp"
                        android:text="99"
                        android:id="@+id/post_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_type"
                        android:layout_toRightOf="@+id/label1"/>
                    <TextView
                        android:textColor="@color/group_less"
                        android:paddingTop="3dp"
                        android:paddingLeft="25dp"
                        android:text="成员:"
                        android:id="@+id/label2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_type"
                        android:layout_toRightOf="@+id/post_count" />
                    <TextView
                        android:textColor="@color/group_less"
                        android:paddingTop="3dp"
                        android:paddingLeft="5dp"
                        android:text="99"
                        android:id="@+id/man_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group_type"
                        android:layout_toRightOf="@+id/label2"/>
                    <LinearLayout
                        android:id="@+id/join_group"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true">
                            <TextView
                                android:textColor="@color/group_less"
                                android:id="@+id/join_status"
                                android:padding="2dp"
                                android:background="@drawable/circular_border"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        <RelativeLayout
            android:id="@+id/group_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg">
            <TextView
                android:paddingLeft="5dp"
                android:text="全部帖子"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/group_down_choice"/>
            <ImageView
                android:id="@+id/group_down_choice"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_keyboard_arrow_right"
                android:layout_width="25dp"
                android:layout_height="25dp" />
            </RelativeLayout>

            <com.thinksky.myview.MoreTextView
                android:id="@+id/group_detail"
                android:layout_below="@+id/linear_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:background="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                more:textSize="12sp"
                more:maxLine="1"
                more:text="群组简介："/>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/body_probar"
                android:layout_width="match_parent"
                android:layout_height="323dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true">
                    <ProgressBar
                        android:layout_gravity="center"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:id="@+id/progressBar" />
                    <TextView
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:text="正在加载..."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linear_body"
                android:paddingTop="3dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/post_at_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:orientation="vertical">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_isnull"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/item_bg">
                    <TextView
                        android:textColor="@color/group_less"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:gravity="center"
                        android:text="没有帖子，我来发一个"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_list"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ListView
                        android:scrollbars="none"
                        android:divider="@null"
                        android:dividerHeight="2dp"
                        android:id="@+id/group_post_listView"
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--刷新按钮-->
    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:alpha="100"
        android:id="@+id/refresh_butn"
        android:background="@drawable/borderradius"
        >
        <ImageView
            android:id="@+id/refresh_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/update"/>

    </RelativeLayout>
</RelativeLayout>