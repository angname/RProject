<resources>

    <!-- Activity主题 -->
    <style name="ActivityThemeOne" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ActivityThemeTwo" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityInOutAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ActivityInOutAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/for_left</item>
        <item name="android:activityOpenExitAnimation">@anim/for_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/for_left</item>
        <item name="android:activityCloseExitAnimation">@anim/for_right</item>
    </style>

    <style name="ProgressBarBig">
        <item name="android:indeterminateDrawable">@drawable/progress_big</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
    </style>

    <style name="CatePopWindow">
        <item name="android:windowEnterAnimation">@anim/for_left</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/for_right</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="popWindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>
