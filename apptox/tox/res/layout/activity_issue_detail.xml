<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#EDEDED">
    <!--页头-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/head_border"
        android:id="@+id/header"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <RelativeLayout
            android:id="@+id/Issue_Back1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/Issue_Back_list"
                android:layout_width="wrap_content"
                android:padding="12dp"
                android:src="@drawable/arrow_left"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:layout_toRightOf="@+id/Issue_Back1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/issue_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/tab"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:ellipsize="marquee"/>
        </LinearLayout>
    </RelativeLayout>
    <!--页脚-->
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="vertical"-->
        <!--android:background="#F6FAFB"-->
        <!--android:id="@+id/footer"-->
        <!--android:gravity="center_horizontal|center_vertical"-->
        <!--android:visibility="visible">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="horizontal">

            <ProgressBar
                android:layout_gravity="center"
                android:id="@+id/image_progress"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="25dp"/>
            <!--<ImageView-->
                <!--android:id="@+id/image_progress"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="match_parent"-->
                <!--android:src="@drawable/empty_photo"/>-->
            <ImageView
                android:padding="5dp"
                android:visibility="gone"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="245dp"
                android:id="@+id/issue_image"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:padding="5dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp">
                <com.thinksky.redefine.CircleImageView
                    android:id="@+id/issue_userImage"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/side_user_avatar"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/issue_userName"
                    android:layout_gravity="bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/group_less"
                    android:padding="3dp"
                    android:background="#F5F5F5"
                    android:textSize="12sp"
                    android:text="测试使用"
                    android:id="@+id/issue_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">
                <LinearLayout
                    android:layout_gravity="top"
                    android:id="@+id/issue_internet"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="35dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/issue_internet"/>
                    <TextView
                        android:text="访问他"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#787C7F"/>
                </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Post_detail_likeBtn"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginRight="6dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_height="35dp"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/forum_like"
                            />
                        <TextView
                            android:id="@+id/detail_supportCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#787C7F"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/Post_detail_comBtn"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:layout_height="35dp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:src="@drawable/forum_com"/>
                        <TextView
                            android:id="@+id/detail_reply_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#787C7F"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <!--</LinearLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/Post_detail_like_com_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="#F5F5F5">
            <TextView
                android:padding="5dp"
                android:textColor="@color/tab"
                android:text="专辑介绍--"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--<WebView-->
                <!--android:hardwareAccelerated="false"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:id="@+id/iss_details"-->
                <!--android:padding="3dp">-->
            <!--</WebView>-->
            <TextView
            android:textColor="#505050"
            android:scrollbars="vertical"
            android:padding="5dp"
            android:textSize="12sp"
            android:scrollHorizontally="true"
            android:id="@+id/iss_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/issue_editBox"
                    android:layout_width="match_parent"
                    android:weightSum="10"
                    android:background="@drawable/forum_edit_backgroud"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_height="50dp">

                    <!--<LinearLayout-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="1.1"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:gravity="center"-->
                        <!--android:visibility="gone"-->
                        <!--android:background="@drawable/round_border"-->
                        <!--android:layout_height="38dp">-->
                        <!---->
                    <!--</LinearLayout>-->
                    <EditText
                        android:id="@+id/issue_index_edittext"
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/edittext_background"
                        android:layout_height="38dp" />
                    <TextView
                        android:id="@+id/issue_index_send_com"
                        android:layout_width="0dp"
                        android:layout_weight="1.5"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:text="发表"
                        android:textColor="#A9ADB0"
                        android:layout_height="38dp">
                    </TextView>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:paddingLeft="5dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:ellipsize="none"
                    android:singleLine="true"
                    android:textColor="@color/tab"
                    android:text="评论--"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.thinksky.myview.IssueListView
                    android:id="@+id/issue_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:dividerHeight="1dp"
                    android:padding="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


